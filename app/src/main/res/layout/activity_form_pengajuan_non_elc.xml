            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_keleluasaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_keleluasaan"
                    layout="@layout/view_header_data_keleluasaan"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_data_keleluasaan"
