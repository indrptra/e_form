                    android:visibility="gone" />

                <include
                    android:id="@+id/content_image_pengajuan"
                    layout="@layout/view_content_image_pengajuan_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_recomendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_recomendation"
                    layout="@layout/view_header_rekomendasi"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_recomendation"
                    layout="@layout/view_content_rekomendasi_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_informasi_penawaran"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_informasi_penawaran"
                    layout="@layout/view_header_informasi_penawaran_product"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_informasi_penawaran"
                    layout="@layout/view_content_form_informasi_penawaran_product" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_persetujuan_tambahan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_persetujuan_tambahan"
                    layout="@layout/view_header_persetujuan_tambahan"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_persetujuan_tambahan"
                    layout="@layout/view_content_form_persetujuan_tambahan" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frm_button_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@color/colorPrimary"
            android:minHeight="56dp"
            android:text="next"
            android:textColor="@color/blue_dark" />

        <LinearLayout
            android:id="@+id/ln_button_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_save_draft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:minHeight="56dp"
                android:text="save as draft"
                android:textColor="@color/blue_dark" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:minHeight="56dp"
                android:text="submit"
                android:textColor="@color/blue_dark" />
        </LinearLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/pb_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_48dp"
        android:layout_marginRight="@dimen/dimen_48dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <!--android:background="@android:drawable/editbox_background"-->

        <TextView
            android:id="@+id/tv_pbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pb_horizontal"
            android:layout_centerHorizontal="true"
            android:text="1 / 15"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pb_horizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:indeterminate="false"
            android:max="25"
            android:minWidth="200dp"
            android:minHeight="16dp"
            android:progress="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_retry"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="RETRY"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>


