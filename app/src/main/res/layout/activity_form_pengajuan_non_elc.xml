                <include
                    android:id="@+id/content_alamat_pemohon"
                    layout="@layout/view_content_alamat_pemohon_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_data_pasangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_pasangan"
                    layout="@layout/view_header_data_pasangan"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_data_pasangan"
                    layout="@layout/view_content_data_pasangan_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_informasi_kerabat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_informasi_kerabat"
                    layout="@layout/view_header_informasi_kerabat"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_informasi_kerabat"
                    layout="@layout/view_content_informasi_kerabat_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_data_pekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_pekerjaan"
                    layout="@layout/view_header_data_pekerjaan"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_data_pekerjaan"
                    layout="@layout/view_content_data_pekerjaan_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_detail_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_detail_product"
                    layout="@layout/view_header_detail_product"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_detail_product"
                    layout="@layout/view_content_data_detail_product_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_data_asuransi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_asuransi"
                    layout="@layout/view_header_data_asuransi"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_data_asuransi"
                    layout="@layout/view_content_data_asuransi_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_agunan"
                android:layout_width="match_parent"
