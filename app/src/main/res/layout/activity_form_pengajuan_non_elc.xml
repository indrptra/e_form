                android:orientation="vertical">

                <include
                    android:id="@+id/header_agunan"
                    layout="@layout/view_header_agunan"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_agunan"
                    layout="@layout/view_content_agunan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_data_perhitungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_perhitungan"
                    layout="@layout/view_header_data_perhitungan"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_data_perhitungan_kendaraan"
                    layout="@layout/view_content_data_perhitungan_kendaraan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_data_npwp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_npwp"
                    layout="@layout/view_header_data_npwp"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_data_npwp"
