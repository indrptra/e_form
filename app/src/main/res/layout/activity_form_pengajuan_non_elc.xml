<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frm_button_bottom"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln_wrapper_data_validasi_awal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_data_validasi_awal"
                    layout="@layout/view_header_validasi_awal"
                    android:visibility="visible" />

                <include
                    android:id="@+id/content_data_validasi_awal"
                    layout="@layout/view_content_validasi_awal_non_elc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_master_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/header_master_header"
                    layout="@layout/view_header_kop"
                    android:visibility="gone" />

                <include
                    android:id="@+id/content_master_header"
                    layout="@layout/view_content_form_kop_non_elc" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_wrapper_data_nama_pemohon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
