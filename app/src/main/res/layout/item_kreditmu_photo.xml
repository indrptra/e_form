<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4dp">

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ln_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!--ITEM PHOTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:gravity="center_horizontal"
                    android:text="Foto KTP" />

                <RelativeLayout
                    android:layout_width="128dp"
                    android:layout_height="96dp"
                    android:layout_margin="@dimen/dimen_4dp"
                    android:background="@drawable/bg_border">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_take_camera" />

                    <ImageView
                        android:id="@+id/img_take_picture_kreditmu_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/img_delete_picture_kreditmu_1"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <!--ITEM PHOTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:gravity="center_horizontal"
                    android:text="Foto Konsumen" />

                <RelativeLayout
                    android:layout_width="128dp"
                    android:layout_height="96dp"
                    android:layout_margin="@dimen/dimen_4dp"
                    android:background="@drawable/bg_border">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_take_camera" />

                    <ImageView
                        android:id="@+id/img_take_picture_kreditmu_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/img_delete_picture_kreditmu_2"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <!--ITEM PHOTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/text.label_photo4" />

                <RelativeLayout
                    android:layout_width="128dp"
                    android:layout_height="96dp"
                    android:layout_margin="@dimen/dimen_4dp"
                    android:background="@drawable/bg_border">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_take_camera" />

                    <ImageView
                        android:id="@+id/img_take_picture_kreditmu_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/img_delete_picture_kreditmu_3"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <!--ITEM PHOTO-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/text.label_photo4" />

                <RelativeLayout
                    android:layout_width="128dp"
                    android:layout_height="96dp"
                    android:layout_margin="@dimen/dimen_4dp"
                    android:background="@drawable/bg_border">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_take_camera" />

                    <ImageView
                        android:id="@+id/img_take_picture_kreditmu_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/img_delete_picture_kreditmu_4"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="?android:selectableItemBackground"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/tv_error_attachment_kreditmu"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/red"
        android:text="@string/text.attachment_kreditmu"/>
</LinearLayout>