<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_list_kerditmu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/txt_tanggal_list_kreditmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="4 Oktober 1999"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/dimen_4dp"/>

        <TextView
            android:id="@+id/txt_nama_list_kreditmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kolorado Begundal"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/ln_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_id_kreditmu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.order_id_kreditmu" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>