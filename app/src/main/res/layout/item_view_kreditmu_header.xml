<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_view_kreditmu_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/dimen_8dp">

        <ImageView
            android:id="@+id/img_view_kreditmu_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_credit_card" />

        <TextView
            android:id="@+id/txt_view_kreditmu_header"
            style="@style/expandHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header.kreditmu_header"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_view_kreditmu_header"
            android:layout_toEndOf="@+id/img_view_kreditmu_header" />
    </RelativeLayout>

</android.support.v7.widget.CardView>