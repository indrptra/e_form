<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:shrinkColumns="2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp">

            <TextView
                android:id="@+id/tv_view_kreditmu_name"
                android:text="@string/text.jenis_kendaraan_bermotor"
                android:layout_width="150dp"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=": " />

            <TextView
                android:id="@+id/tv_view_kreditmu_value"
                android:paddingRight="@dimen/drawable_padding_right_table_row"
                android:text="@string/text.bank_account" />
        </TableRow>
    </TableLayout>


</LinearLayout>