<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_perincian_non_sale_leaseback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:padding="@dimen/dimen_14dp"
                    android:text="@string/hint_perincian_pembiayaan_non_sale_amp_leasback"
                    android:textSize="@dimen/text_small_body"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8dp">

                <LinearLayout
                    android:id="@+id/ln_tenor_perhitungan_kendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTenorPerhitunganKendaraan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/only_choice"
                        android:text="Tenor"
                        android:textSize="12sp" />

                    <Spinner

                        android:id="@+id/spn_tenor_perhitungan_kendaraan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_harga_agunan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_harga_agunan"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_pinjaman"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:hint="@string/hint_pinjaman"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edtDownpayment"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:hint="@string/hintdownpayment"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilPokokPembiayaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kreditplus.eform.view.IndonesianCurrencyEditText
                            android:id="@+id/edtPokokPembiayaan"
                            style="@style/EditTextForm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:longClickable="false"
                            android:maxLength="@integer/max_length_for_rupiah" />
                    </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_biaya_admin_perhitungan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:hint="@string/hint.biaya_administrasi"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_premi_asuransi_perhitungan_agunan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint.premi_asuransi_agunan"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_premi_asuransi_perhitungan_jiwa_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint.premi_asuransi_jiwa"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_jumlah_pembiayaan_perhitungan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint.jumlah_pembiayaan"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_bunga_pembiayaan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_bunga_pembiayaan"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_total_pinjaman_perhitungan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint.total_pinjaman"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_informasi_perincian_pembiayaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_gray"
                    android:padding="@dimen/dimen_14dp"
                    android:text="@string/hint_informasi_perincian_pembiayaan"
                    android:textSize="@dimen/text_small_body"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_angsuran_perbulan_perhitungan_kendaraan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.kreditplus.eform.view.IndonesianCurrencyEditText
                            android:id="@+id/edt_angsuran_perbulan_perhitungan_kendaraan"
                            style="@style/EditTextForm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:hint="@string/hint.angsuran_perbulan"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:longClickable="false" />
                    </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_flat_pertahun_perhitungan_kendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_flat_pertahun_perhitungan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint.flat_pertahun"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_refresh_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:minHeight="40dp"
                    android:text="Refresh Kalkulasi"
                    android:textColor="@color/blue_dark" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_stnk_perhitungan_kendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_stnk_perhitungan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:hint="@string/hint.biaya_stnk"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="@integer/max_length_for_rupiah" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilBiayaNotarisPerhitunganKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edtBiayaNotarisPerhitunganKendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:hint="@string/hint_biaya_notaris"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="@integer/max_length_for_rupiah" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilBiayaPnbpFidusiaPerhitunganKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edtBiayaPnbpFidusiaPerhitunganKendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:hint="@string/hint_biaya_pnbp_fidisia"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="@integer/max_length_for_rupiah" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilBiayaSurveyPerhitunganKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edtBiayaSurveyPerhitunganKendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:hint="@string/hint_biaya_survey"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="@integer/max_length_for_rupiah" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilAngsuranPertamaPerhitunganKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kreditplus.eform.view.IndonesianCurrencyEditText
                        android:id="@+id/edt_angsuran_pertama_perhitungan_kendaraan"
                        style="@style/EditTextForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_total_setor_pertama"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:longClickable="false" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
