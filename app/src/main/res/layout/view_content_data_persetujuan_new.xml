<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:text="@string/form.content.persetujuan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ln_ttd_pemohon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_date_pemohon_persetujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt__12_20_15" />

            <ImageView
                android:id="@+id/img_ttd_pemohon_persetujuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_96dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:background="@color/colorDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/form.content.tanda_tangan" />

            <TextView
                android:id="@+id/txt_ttd_pemohon_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_tidak_boleh_kosong"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ttd_pemohon_lain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_date_pasangan_persetujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_12_20_15" />

            <ImageView
                android:id="@+id/img_ttd_pasangan_persetujuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_96dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:background="@color/colorDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/form.content.tanda_tangan_suami" />

            <TextView
                android:id="@+id/txt_ttd_pasangan_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_tidak_boleh_kosong"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>