<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp"
    android:visibility="gone">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_no_ktp_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint_no_ktp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="16"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.santalu.maskedittext.MaskEditText
            android:id="@+id/edt_no_npwp_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.npwp"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="15"
            android:maxLines="1"
            android:visibility="gone"
            app:mask="##.###.###.#-###.###" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ln_status_pernikahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_status_pernikahan"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_status_pernikahan_pribadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/status_pernikahan"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingTop="@dimen/dimen_2dp" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp">

        <EditText
            android:id="@+id/edt_status_pernikahan_pribadi_hide"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint_status_pernikahan"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="16"
            android:singleLine="true"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_tanggal_lahir_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/hint_tanggal_lahir"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:longClickable="false"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_handphone_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.no_hp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="16"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp">

        <EditText
            android:id="@+id/edt_handphone_pribadi_hide"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.no_hp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="16"
            android:singleLine="true"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:textAllCaps="true"
            android:id="@+id/edt_nama_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/hint.nama_lengkap"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_nama_ktp_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/hint.nama_identitas"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:textAllCaps="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_terbit_ktp_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.tanggal_terbit_ktp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:longClickable="false"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ln_jenis_kelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_gender"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_gender_pribadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:entries="@array/gender" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_tempat_lahir_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.tempat_lahir"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="20"
            android:textAllCaps="true"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_nama_ibu_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.nama_ibu"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true"
            android:textAllCaps="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp">

        <EditText
            android:id="@+id/edt_nama_ibu_pribadi_hide"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.nama_ibu"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="16"
            android:singleLine="true"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ln_pendidikan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_pendidikan"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_pendidikan_pribadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:entries="@array/pendidikan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warga Negara"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_warga_negara_pribadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/warga_negara" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp">

        <EditText
            android:id="@+id/edt_pendidikan_pribadi_hide"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/text.pendidikan"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="16"
            android:singleLine="true"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ln_status_rumah_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_status_rumah"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_status_rumah_pribadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:entries="@array/status_rumah" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_tinggal_sejak_tahun_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.tinggal_sejak_tahun"
            android:imeOptions="actionNext"
            android:inputType="datetime"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_tinggal_sejak_bulan_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.tinggal_sejak_bulan"
            android:imeOptions="actionNext"
            android:inputType="datetime"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ln_agama_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_agama"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spn_agama_pribadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:entries="@array/agama" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_jml_tanggungan_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.jml_tanggungan"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4dp">

        <EditText
            android:id="@+id/edt_jml_tanggungan_pribadi_hide"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="@string/hint.jml_tanggungan"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="16"
            android:singleLine="true"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_2dp">

        <EditText
            android:id="@+id/edt_email_pribadi"
            style="@style/EditTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_status_pernikahan_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_field_marital_status"
        android:textColor="@color/red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_nama_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_full_name"
        android:textColor="@color/red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_nama_ktp_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_name_on_identity"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_terbit_ktp_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_ktp_published"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_gender_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_field_gender"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_tempat_lahir_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_place_of_birth"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_nama_ibu_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_biogical_mother"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_pendidikan_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_field_education"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_status_rumah_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_home_status"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_tinggal_sejak_tahun_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_lived_since_years"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_tinggal_sejak_bulan_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_lived_since_month"
        android:textColor="@color/red"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_agama_pribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/hide_msg_religion"
        android:textColor="@color/red"
        android:visibility="gone" />
</LinearLayout>
