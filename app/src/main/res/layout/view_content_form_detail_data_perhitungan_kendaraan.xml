<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_perhitungan"
                android:drawablePadding="@dimen/drawable_padding_detail"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_detail_header"
                android:text="@string/header.data_perhitungan"
                android:textColor="@color/blue_dark"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/tl_pengajuan_data_perhitungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:shrinkColumns="2">

                <TableRow
                    android:id="@+id/trTenorKendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/text.tenor" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=":" />

                    <TextView android:id="@+id/tvTenorKendaraan" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint_harga_agunan" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvHargaAgunan"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:id="@+id/tvTitlePokokPembiayaan" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvPinjamanKonsumen"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:id="@+id/trNonPsaDownpayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hintdownpayment" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvDownpayment"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/text.biaya_administrasi" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvBiayaAdministrasi"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:id="@+id/trNonPsaBiayaProvisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint_biaya_provisi" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvBiayaProvisi"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint.premi_asuransi_agunan" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvPremiAsuransiAgunan"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint.premi_asuransi_jiwa" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvPremiAsuransiJiwa"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/text.jumlah_pembiayaan" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvJumlahPembiayaan"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint_bunga_pembiayaan" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvTotalBungaPembiayaan"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint.total_pinjaman" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvTotalPinjaman"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint.angsuran_perbulan" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvAngsuranPerbulan"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint.flat_pertahun" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvFlatTahun"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />
                </TableRow>

                <TableRow
                    android:id="@+id/trPnbpFidusia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint_biaya_pnbp_fidisia" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvPnbpFidusia"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />
                </TableRow>

                <TableRow
                    android:id="@+id/trNonPsaBiayaPengurusanStnk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/text.biaya_pengurusan_stnk" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvBiayaPengurusanStnk"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />
                </TableRow>

                <TableRow
                    android:id="@+id/trNonPsaBiayaNotaris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint_biaya_notaris" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvBiayaNotaris"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />
                </TableRow>

                <TableRow
                    android:id="@+id/trNonPsaBiayaSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp">

                    <TextView android:text="@string/hint_biaya_survey" />

                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text=": " />

                    <TextView
                        android:id="@+id/tvBiayaSurvey"
                        android:paddingRight="@dimen/drawable_padding_right_table_row" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>