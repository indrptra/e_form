<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_4dp"
    android:paddingRight="@dimen/dimen_4dp">

    <TextView
        android:id="@+id/txt_asset_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_detail_header"
        android:text="@string/text.assetElektronik"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:shrinkColumns="2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp">

            <TextView android:text="@string/text.nama_barang" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=": " />

            <TextView
                android:id="@+id/txt_nama_barang_asset_item"
                android:paddingRight="@dimen/drawable_padding_right_table_row"
                android:text="Honda CBR 150R" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_4dp">

            <TextView android:text="@string/text.price" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=":" />

            <TextView
                android:id="@+id/txt_price_asset_item"
                android:paddingRight="@dimen/drawable_padding_right_table_row"
                android:text="Rp. 33.300.000" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_4dp">

            <TextView android:text="@string/text.dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=":" />

            <TextView
                android:id="@+id/txt_dp_asset_item"
                android:paddingRight="@dimen/drawable_padding_right_table_row"
                android:text="Rp. 8.000.000" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_4dp">

            <TextView android:text="@string/text.discount" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=":" />

            <TextView
                android:id="@+id/txt_discount_asset_item"
                android:paddingRight="@dimen/drawable_padding_right_table_row"
                android:text="Rp. 300.000" />
        </TableRow>


    </TableLayout>

</LinearLayout>